{
    "manifest_version": 3,
    "name": "holodule filter",
    "version": "2.2.1",
    
    "action": {
        "default_popup": "popup/popup.html"
    },
    "description": "ホロジュールをタレント毎にフィルターできる拡張機能",
    
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [{
        "matches": ["https://schedule.hololive.tv/*"],
        "js": ["content_script.js"]
    }],
    "host_permissions": [
        "https://schedule.hololive.tv/*"
    ],
    "permissions": [
        "storage"
    ]
}
